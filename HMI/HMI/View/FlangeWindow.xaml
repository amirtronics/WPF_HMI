<Window x:Class="HMI.View.FlangeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HMI.View"
        mc:Ignorable="d"
        Title="FlangeWindow" Height="600" Width="1000" WindowStyle="None" 
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Opacity="0.8">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock 
            x:Name="flangeTitleBox" 
            Text="Flange Tab"
            FontSize="24"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>
    </Grid>
</Window>
